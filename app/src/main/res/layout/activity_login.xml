<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenbg"
    tools:context=".login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/roboto_blk"
        android:text="Login Account"
        android:textColor="@color/txtcolor"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/roboto_rgl"
        android:text="Hello welcome back to account"
        android:textStyle="bold"
        android:textColor="@color/txtcolor"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        #signin signup
        <androidx.cardview.widget.CardView
            android:layout_height="46dp"
            android:layout_width="305dp"
            android:layout_marginTop="145dp"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#E7E6EA" >

            #layout1
            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="195dp"
                android:fontFamily="@font/roboto_bold"
                android:text="SIGN UP"
                android:textColor="@color/txtcolor"
                android:textFontWeight="1"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            #layout2
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="1dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN IN"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="14dp"
                    android:textColor="@color/txtcolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center"
                    android:textFontWeight="1" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="235dp"
            android:layout_marginStart="28dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Sign In"
            android:textColor="@color/txtcolor"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        #box1 username


        #box2 email
        <com.google.android.material.card.MaterialCardView
            android:layout_width="305dp"
            android:layout_height="53dp"
            android:layout_marginTop="297dp"
            android:layout_marginStart="28dp"
            app:cardBackgroundColor="@color/screenbg"
            app:cardCornerRadius="15dp"
            app:strokeWidth="1dp"
            app:strokeColor="#707070"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="15.1dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="27dp"
                android:src="@drawable/mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="65dp"
                android:hint="Email id"
                android:textColorHint="@color/desc_txt"
                android:fontFamily="@font/roboto_rgl"
                android:textColor="@color/desc_txt"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.card.MaterialCardView>

        #box3 password
        <com.google.android.material.card.MaterialCardView
            android:layout_width="305dp"
            android:layout_height="53dp"
            android:layout_marginTop="370dp"
            android:layout_marginStart="28dp"
            app:cardBackgroundColor="@color/screenbg"
            app:cardCornerRadius="15dp"
            app:strokeWidth="1dp"
            app:strokeColor="#707070"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="15.1dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="27dp"
                android:src="@drawable/lock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:hint="Password"
                android:textColorHint="@color/desc_txt"
                android:inputType="textPassword"
                android:fontFamily="@font/roboto_rgl"
                android:textColor="@color/desc_txt"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.textfield.TextInputEditText>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="15.1dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="255dp"
                android:src="@drawable/eye"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:layout_marginTop="430dp"
            android:layout_marginStart="205dp"
            android:textColor="@color/txtcolor"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        #login button
        <androidx.cardview.widget.CardView
            android:id="@+id/login1"
            android:layout_width="305dp"
            android:layout_height="53dp"
            android:layout_marginTop="484dp"
            android:layout_marginStart="28dp"
            app:cardBackgroundColor="@color/txtcolor"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="305dp"
            android:layout_height="19dp"
            android:layout_marginTop="550dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/or"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        #login with google
        <com.google.android.material.card.MaterialCardView
            android:layout_width="305dp"
            android:layout_height="53dp"
            android:layout_marginTop="585dp"
            android:layout_marginStart="28dp"
            app:cardBackgroundColor="#E7E7E7"
            app:cardCornerRadius="15dp"
            app:strokeWidth="1dp"
            app:strokeColor="#707070"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="37dp"
                android:src="@drawable/google"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="95.2dp"
                android:text="Login with Google"
                android:fontFamily="@font/roboto_mid"
                android:textColor="@color/txtcolor"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>